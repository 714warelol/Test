local player = game.Players.LocalPlayer
local camera = game.Workspace.CurrentCamera

-- Function to make the camera look at specific coordinates
local function lookAtCoordinates(x, y, z)
    local lookAtPosition = Vector3.new(x, y, z)
    camera.CFrame = CFrame.new(camera.CFrame.Position, lookAtPosition)
end

-- Coordinates to look at
local targetX = -1672.2464599609375
local targetY = -11.548667907714844
local targetZ = -591.4005126953125

-- Main function
local function main()
    lookAtCoordinates(targetX, targetY, targetZ)
    print("Camera is now looking at coordinates:", targetX, targetY, targetZ)
end

main()

local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")

-- Function to teleport the character to custom coordinates
local function teleportToCoordinates(x, y, z)
    humanoidRootPart.CFrame = CFrame.new(x, y, z)
end

-- Custom coordinates you want to teleport to
local targetX = -1675.518432617185
local targetY = 28.114009857177734
local targetZ = -523.6483154296875

-- Main function
local function main()
    teleportToCoordinates(targetX, targetY, targetZ)
    print("Teleported to coordinates:", targetX, targetY, targetZ)
end

main()
