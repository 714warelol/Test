-- This script should be placed in ServerScriptService or a LocalScript in StarterPlayerScripts

local function setLowGraphics()
    local lighting = game:GetService("Lighting")

    -- Reduce the quality of shadows
    lighting.GlobalShadows = false
    lighting.OutdoorAmbient = Color3.fromRGB(127, 127, 127)

    -- Reduce the quality of textures
    for _, v in pairs(workspace:GetDescendants()) do
        if v:IsA("BasePart") then
            v.Material = Enum.Material.SmoothPlastic
        end
    end

    -- Disable other graphical effects
    lighting.Brightness = 1
    lighting.ColorShift_Bottom = Color3.new(0, 0, 0)
    lighting.ColorShift_Top = Color3.new(0, 0, 0)
    lighting.EnvironmentDiffuseScale = 0
    lighting.EnvironmentSpecularScale = 0
    lighting.GlobalShadows = false
    lighting.OutdoorAmbient = Color3.fromRGB(135, 135, 135)
    lighting.TimeOfDay = "14:00:00"
    lighting.FogEnd = 1000
    lighting.FogStart = 1000

    -- Disable PostProcessingEffects
    for _, effect in pairs(lighting:GetChildren()) do
        if effect:IsA("PostEffect") then
            effect.Enabled = false
        end
    end
end

-- Execute the function to apply low graphics settings
setLowGraphics()
