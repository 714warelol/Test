-- Function to get an instance by name and class from getnilinstances
local getNil = function(name, class)
    for _, v in next, getnilinstances() do
        if v.ClassName == class and v.Name == name then
            return v
        end
    end
end

-- Change this to the player's username
local playerUsername = game.Players.LocalPlayer.Name

-- Locate the PlayerGui for the specific player
local player = game.Players:FindFirstChild(playerUsername)
if player then
    local playerGui = player:FindFirstChild("PlayerGui")
    if playerGui then
        -- Navigate to the specific HUD element
        local textLabel = playerGui:FindFirstChild("HUD")
            and playerGui.HUD:FindFirstChild("Toolbar")
            and playerGui.HUD.Toolbar:FindFirstChild("CurrencyList")
            and playerGui.HUD.Toolbar.CurrencyList:FindFirstChild("Gems")
            and playerGui.HUD.Toolbar.CurrencyList.Gems:FindFirstChild("TextLabel")
        
        -- Change the text of the TextLabel
        if textLabel and textLabel:IsA("TextLabel") then
            textLabel.Text = "752,832"
            print("Gems Succesfully Changed")
        else
            print("0x1?")
        end
    else
        print("PlayerGui not found for player:", playerUsername)
    end
else
    print("Player not found:", playerUsername)
end
